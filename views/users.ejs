<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/styles/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>
  <body>
    <h1 class="titulo">USERS - MONGODB</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Profile</th>
          <th scope="col">First</th>
          <th scope="col">Last</th>
          <th scope="col">Email</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody id="userTableBody">
        <% users.forEach(function(user, index) { %>
          <tr>
            <td><%= user._id%></td>
            <td>
              <img class="perfil" src="uploads/<%= user.profile %>" onerror="this.onerror=null; this.src='user_default/user_default.png'">
            </td>
            <td><%= user.izena %></td>
            <td><%= user.abizena %></td>
            <td><%= user.email %></td>
            <td> 
              <form action="/users/edit/<%= user._id %>" method="GET" style="display: inline;">
                <button type="submit" class="editar">
                    <i class="fas fa-edit"></i>
                </button>
              </form>
            
              <form action="/users/delete/" method="POST" style="display: inline;">
                <input type="hidden" name="_id" value="<%= user._id %>">
                <button type="submit" class="eliminar">
                  <i class="fas fa-trash-alt"></i>
                </button>
              </form>

            </td>
          </tr>
        <% }) %>
      </tbody>      
    </table>
    <form action="/users/new" method="post" id="formularioa" enctype="multipart/form-data">
      <input type="file" name="avatar" style="width: 450px;" />
      <input class="name-input" type="text" name="izena" placeholder="Izena" required/>
      <input class="apellido-input" type="text" name="abizena" placeholder="Abizena" required/>
      <input class="correo-input" type="text" name="email" placeholder="Email" required/>
      <input type="hidden" name="id" />
      <input class="boton" type="submit" value="Gehitu" />
    </form>
  </body>
</html>
